<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  html {
    font-family: Arial, Helvetica, sans-serif;
    background: #f6f5f1;
    color: #13100f;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  body {
    position: relative;
    min-height: 100vh;
    z-index: 1;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
  }
  body::before {
    content: "";
    position: absolute;
    inset: 0px;
    z-index: -100;
    background-image: url(/svg/header-gradient.svg),
      url(/svg/footer-gradient.svg);
    background-repeat: no-repeat;
    background-position:
      center top,
      center bottom;
    background-size: 1400px;
  }

  #texture {
    position: fixed;
    top: 0px;
    left: 0px;
    z-index: -99;
    width: 100%;
    height: calc(200px + 100vh);
    opacity: 0.25;
    pointer-events: none;
    transform: translateY(0px);
    filter: contrast(120%) brightness(120%);
  }

  @font-face {
    font-family: "Soria";
    src:
      url("/font/soria-font-webfont.woff2") format("woff2"),
      url("/font/soria-font-webfont.woff") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  /* Define la animaci√≥n */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .fade-in {
    opacity: 0;
    animation: fadeIn 1s ease-in forwards;
  }

  .animate-on-scroll {
    opacity: 0;
    transform: translateY(80px);
    transition:
      opacity 1.5s ease-in-out,
      transform 1.5s ease-in-out;
  }

  .animate-on-scroll.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>
